<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="640px"
    android:layout_height="1136px" >

     <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="640px"
        android:layout_height="70px"
        android:layout_centerHorizontal="true"
        android:background="@color/blue_light"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50px"
            android:background="@drawable/bkg_rounded_selector"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/blue_dark"
            android:textSize="20px" />

        <TextView
            android:id="@+id/txv_size"
            android:layout_width="140px"
            android:layout_height="70px"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:maxLines="1"
            android:text="25"
            android:textColor="#FFF"
            android:textSize="23px" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bkg_rounded_selector"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/blue_dark"
            android:textSize="20px" />

        <TextView
            android:id="@+id/txv_size_name"
            android:layout_width="350px"
            android:layout_height="70px"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/font_size"
            android:textColor="#FFF"
            android:textSize="23px" />
    </LinearLayout>
    
    <TextView
        android:id="@+id/txv_emptyList"
        android:layout_width="400px"
        android:layout_height="150px"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/empty_list"
        android:textSize="30px"
        android:maxLines="1"
        android:textColor="#000"
        android:visibility="gone" />

    <com.sa7i7mouslem.utils.LoadMoreListView
        android:id="@+id/android:list"
        android:layout_width="640px"
        android:layout_height="1136px"
        android:layout_below="@+id/layout_top"
        android:layout_margin="15px"
        android:divider="@color/blue_turquoise"
        android:dividerHeight="10px"
        android:gravity="center"
        android:scrollingCache="false" />

</RelativeLayout>